from flask_sqlalchemy import SQLAlchemy

db = SQLAlchemy()

class Project(db.Model):
    __tablename__ = 'projects'
    
    id = db.Column(db.Integer, primary_key=True)
    title = db.Column(db.String(200), nullable=False)
    content = db.Column(db.Text, nullable=True)
    price = db.Column(db.Float, nullable=False)
    video_link = db.Column(db.String(500), nullable=True)  # 用于存储 YouTube 介绍视频链接
    viewing_video_link = db.Column(db.String(500), nullable=True)  # 用于存储看房视频链接
    
    # 这里存储图片路径或 URL（你可以选择存储图片的 URL 或直接将图片上传到服务器）
    images = db.relationship('ProjectImage', backref='project', lazy=True)

class ProjectImage(db.Model):
    __tablename__ = 'project_images'
    
    id = db.Column(db.Integer, primary_key=True)
    project_id = db.Column(db.Integer, db.ForeignKey('projects.id'), nullable=False)
    image_url = db.Column(db.String(500), nullable=False)
